{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
    },
    {
        "name": "Attach to Chrome",
        "port": 9222,
        "request": "attach",
        "type": "chrome",
        "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },

    {
      "type": "chrome",
      "request": "launch",
      "name": "Open Homepage (index.html)",
      "file": "${workspaceFolder}/index.html"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open BA1 Course",
      "file": "${workspaceFolder}/BA1/BA1.html"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open BA2 Course",
      "file": "${workspaceFolder}/BA2/BA2.html"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open BA3 Template",
      "file": "${workspaceFolder}/BA3/BA3.html"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch with Live Server (localhost:8000)",
      "url": "http://localhost:8000/index.html",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": ["--disable-web-security"]
    }
  ]
}
